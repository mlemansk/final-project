<!-- Validation failure messages -->
<% if @loan.present? %>
  <% if @loan.errors.any? %>
    <% @loan.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new loan
</h1>


<hr>

<form action="/create_loan" method="post">

  <div class="form-group">
    <label for="current_balance">
      Current balance
    </label>

    <input type="text" id="current_balance" name="current_balance" class="form-control" value="<%= @loan.current_balance %>">
  </div>

  <div class="form-group">
    <label for="original_amount">
      Original amount
    </label>

    <input type="text" id="original_amount" name="original_amount" class="form-control" value="<%= @loan.original_amount %>">
  </div>

  <div class="form-group">
    <label for="interest_rate">
      Interest rate
    </label>

    <input type="text" id="interest_rate" name="interest_rate" class="form-control" value="<%= @loan.interest_rate %>">
  </div>

  <div class="form-group">
    <label for="monthly_min_payment">
      Monthly Minimum
    </label>

    <input type="text" id="monthly_min_payment" name="monthly_min_payment" class="form-control" value="<%= @loan.monthly_min_payment %>">
  </div>

  <div class="form-group">
    <label for="periods_in_year">
      Periods in year
    </label>

    <input type="text" id="periods_in_year" name="periods_in_year" class="form-control" value="<%= @loan.periods_in_year %>">
  </div>

  <!--Captures Current User ID for Loan-->
  
  <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%=current_user.id %>">

  <div class="form-group">
    <label for="loan_name">
      Loan name
    </label>

    <input type="text" id="loan_name" name="loan_name" class="form-control" value="<%= @loan.loan_name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create loan
  </button>
</form>

<hr>

<a href="/loans">
  Go back
</a>
